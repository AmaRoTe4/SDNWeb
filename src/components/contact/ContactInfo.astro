---
const contacts = [
  {
    title: 'Postal address',
    img: '/assets/direction.svg',
    text: ['1557 Rivadavia', 'Malabrigo, Sta Fe, Argentina'],
  },
  {
    title: 'Phone number',
    img: '/assets/phone.svg',
    text: ['+54 3482377231'],
  },
  {
    title: 'Email',
    img: '/assets/email.svg',
    text: ['amarocattarozzi@hotmail.com'],
  },
];
---

<section class="py-16 sm:py-20">
  <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <dl class="grid gap-6 lg:grid-cols-3">
      {
        contacts.map((n) => (
          <div class="rounded-3xl bg-primary-500/10 px-6 py-8 dark:bg-primary-400/10">
            <dt class="sr-only">{n.title}</dt>
            <dd class="flex h-full flex-col justify-between gap-12">
              <img 
                width="50px"
                src={n.img} 
                alt={n.title} 
              />
              <div class="text-base font-medium">
                {n.text.map((m) => (
                  <p>{m}</p>
                ))}
              </div>
            </dd>
          </div>
        ))
      }
    </dl>
  </div>
</section>
